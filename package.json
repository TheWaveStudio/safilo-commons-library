    "babel-eslint": "^10.1.0",
    "body-parser": "^1.19.0",
    "bootstrap": "^4.6.0",
    "contentful": "^8.3.1",
    "core-js": "^3.6.5",
    "cors": "^2.8.5",
    "esm": "^3.2.25",
    "express": "^4.17.1",
    "google-auth-library": "^7.0.4",
    "graphql": "^15.5.0",
    "graphql-tag": "^2.11.0",
    "moment": "^2.29.1",
    "morgan": "^1.10.0",
    "multipassify": "^1.1.0",
    "sass-resources-loader": "^2.2.1",
    "vee-validate": "<3.0.0",
    "voca": "^1.4.0",
    "vue": "^2.6.12",
    "vue-template-compiler": "^2.6.12"
  },
  "devDependencies": {
    "@babel/core": "^7.13.15",
    "@storybook/addon-actions": "^6.2.7",
    "@storybook/addon-controls": "^6.2.8",
    "@storybook/addon-essentials": "^6.2.7",
    "@storybook/addon-links": "^6.2.7",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/vue": "^6.2.7",
    "@vue/cli-plugin-babel": "~4.5.0",
    "babel-loader": "^8.2.2",
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
    "css-loader": "^5.2.1",
    "dotenv": "^8.2.0",
    "eslint": "^7.24.0",
    "eslint-loader": "^4.0.2",
    "eslint-webpack-plugin": "^2.5.3",
    "husky": "^6.0.0",
    "mocha": "^8.3.2",
    "nyc": "^15.1.0",
    "sass": "^1.32.8",
    "sass-loader": "^7.3.1",
    "style-loader": "^2.0.0",
    "vue-loader": "^15.9.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "license": "MIT",
  "lint-staged": {
    "*.{js,vue}": "eslint",
    "*.{css,vue}": "stylelint"
  },
  "repository": "https://github.com/TheWaveStudio/safilo-commons-library.git"
}
