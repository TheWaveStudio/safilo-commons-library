{
  "name": "safilo-commons-library",
  "version": "1.0.0",
  "private": true,
  "description": "Common Safilo e-commerce modules.",
  "author": "Luca Pagliaro <luca.pagliaro@thewavestudio.it>",
  "scripts": {
    "lint": "npm run lint:js && npm run lint:style",
    "build-storybook": "build-storybook",
    "lint:js": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "lint:style": "stylelint **/*.{vue,css} --ignore-path .gitignore",
    "start-server": "node backend/server.js",
    "storybook": "start-storybook -p 6007",
    "storybook-cr": "start-storybook -c .storybook-cr -p 6006",
    "test-server": "nyc --reporter=html --reporter=text _mocha backend/tests/*.js --timeout 10000 --exit -- -R spec"
  },
  "main": "index.js",
  "dependencies": {
    "@babel/plugin-proposal-optional-chaining": "^7.13.12",
    "@hapi/joi": "^17.1.1",
    "@oruga-ui/oruga": "^0.3.5",
